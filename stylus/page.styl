// My love for Bandcamp
// Job Application for Bandcamp
// Valentina Montagna
// Berlin 2015


// Fonts
@import url("//fonts.googleapis.com/css?family=Open\+Sans:400,300,600,700,800")
@import url("//fonts.googleapis.com/css?family=Merriweather:400,300italic,300,400italic,700,700italic,900,900italic")
@import url("//fonts.googleapis.com/css?family=Inconsolata:400,700")

@font-face {
    font-family: "House Slant";
    src: url('HouseSlant.eot');
    src: url("HouseSlant.eot?#iefix") format("embedded-opentype"),
         url("HouseSlant.woff") format("woff");
    font-style: normal;
    font-weight: 400;
    font-stretch: normal;
}

// ------------------------------
// Colors
// ------------------------------

$color_bg_intro = #F8F6F3
$color_bg_playlist = #303030

$color_shadow_menu = #494744

$color_text = #444444
$color_text_lighter = lighten($color_text, 16%)
$color_links = #E96985
$color_links_hover = #2193B4

$color_grey = lighten($color_text, 45%)
$color_grey_light = lighten($color_text, 65%)
$color_grey_extra_light = lighten($color_text, 85%)

$color_menu_buttons = lighten($color_text, 30%)

// Mixins
transition()
  -webkit-transition arguments
  transition arguments

// Rounded Corners
$rounded_corners = 4px
$rounded_corners_small = 3px

// ------------------------------
// General Styles
// ------------------------------

body
    color $color_text

    font-family 'Merriweather', Georgia, serif
    text-rendering optimizeLegibility
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

    a
      font-weight 700
      text-decoration none

      color $color_links
      border-bottom 1px solid @color

      transition(all 0.3s ease)

      // hover affects only desktop view
      @media screen and (min-width: 960px)
        &:hover
          color $color_links_hover
          border-bottom 1px solid @color

    strong
      font-weight 700

// ------------------------------
// Buttons
// ------------------------------

// Menu Buttons
.menu-button
  padding 0.5em 0.8em

  border-bottom none
  border-radius $rounded_corners

  color $color_grey

  font-family 'Open Sans'
  font-size 0.75em
  font-weight 700
  text-transform uppercase
  letter-spacing 1px

  transition(all 0.4s ease)

  // hover affects only desktop view
  @media screen and (min-width: 960px)
    &:hover
      border-bottom none

      color $color_bg_intro
      background-color $color_text_lighter

    &:active
      box-shadow inset 0px 0px 3px 2px rgba($color_text, 0.2)

&.active .menu-button
  color white

.contact-me
  color $color_links

  // hover affects only desktop view
  @media screen and (min-width: 960px)
    &:hover
      color white
      background-color $color_links

// Button links
.button
  display inline-block

  padding 1em 1.2em

  border-bottom none
  border-radius $rounded_corners

  color white
  background-color $color_links

  font-family 'Open Sans', sans-serif
  font-size 0.75em
  font-weight 700
  line-height 16px
  text-align center
  text-transform uppercase
  letter-spacing 1px

  box-shadow 0px 2px 3px -3px rgba($color_text, 0)

  transition(all 0.3s ease)

  &:hover
    border-bottom none

    color white
    background-color $color_links_hover
    box-shadow 0px 3px 3px -3px rgba($color_text, 0.8)

  &:active
    box-shadow inset 0px 1px 3px 0px darken($color_links_hover, 40%)

  @media screen and (max-width: 640px)
    display block

// Smaller button
.btn-small
  @extend .button
  padding 0.6em 1em
  border-radius $rounded_corners_small
  font-size 0.688em

// Block button
.btn-block
  @extend .button
  display block

// Color and style variants
.btn-outline
  @extend .button
  border 1px solid @color_text

  background-color white
  color $color_text

  &:hover
    border 1px solid $color_links

    color white
    background-color $color_links

  &:active
    box-shadow inset 0px 1px 3px 0px darken($color_links, 30%)

.btn-light
  @extend .button
  border 1px solid darken($color_bg_intro, 5%)

  color lighten($color_text, 25%)
  background-color $color_bg_intro

  &:hover
    border 1px solid @background-color

    color white
    background-color $color_links

  &:active
    box-shadow inset 0px 1px 3px 0px darken($color_links, 30%)

.btn-dark
  @extend .button
  color $color_grey_extra_light
  background-color $color_text

  &:hover
    color white
    background-color $color_links

  &:active
    box-shadow inset 0px 1px 3px 0px darken($color_links, 30%)

// Non-text links
.non-text-link
  border-bottom none

  &:hover
    border-bottom none

// ------------------------------
// Typography Skins
// ------------------------------

// Section title
.section-title
  margin 1.8em 0 0 0

  font-size 2.6em
  font-weight 900
  line-height 1.5em
  text-align center

  @media screen and (max-width: 640px)
    padding 0 0.375em
    font-size 1.8em

// Section subtitle
.section-subtitle
  margin 1.6em 0 2em 0

  font-family 'Open Sans', sans-serif
  font-size 0.9em
  font-weight 600
  line-height 1.8em
  text-transform uppercase
  letter-spacing 1px

  @media screen and (max-width: 640px)
    padding 0 1.4em
    color $color_grey
    font-size 0.8em

.underlined
  @extend .section-subtitle
  margin 1.6em 0 0 0
  padding-bottom 3em
  border-bottom 1px solid $color_grey_extra_light

  @media screen and (max-width: 640px)
    border-bottom none

    &:after
      content ''
      display block
      max-width 120px
      margin 2em auto 0.75em auto
      border-bottom 1px solid $color_grey_extra_light

// Descriptions
.description
  color $color_text_lighter

// Description 2 columns
.description-half
  @extend .description
  margin 1em 0 0 0

  font-size 1em
  line-height 1.688em

// Description 3 columns
.description-third
  @extend .description
  margin 1.2em 0

  font-size 0.9em
  line-height 1.8em

// Sub-subtitles
.subtitle-strong
  margin 1.2em 0 0.85em 0

  font-family 'Open Sans', sans-serif
  font-size 0.8em
  font-weight 700
  text-transform uppercase
  letter-spacing 1px

.subtitle-light
  @extend .subtitle-strong
  font-weight 600

// ------------------------------
// Menu
// ------------------------------

// Menu
.menu-page
  position relative

  .menu-container
    position fixed
    z-index 100

    padding 0.85em 0

    background-color $color_text
    box-shadow 0px 1px 1px 0px rgba($color_shadow_menu, 0.4)

    li
      .active
        color white

// Mobile Menu
input[type=checkbox]
  display none

.mobile-menu-container
    background-color $color_text

  .slide-mobile-menu
      overflow hidden
      max-height 0
      border-width 0 10px !important
      opacity 0
      text-align center

      transition(all .5s ease)

      .mobile-menu
        padding 1.063em 0

        li
          padding 0.3em 0

  input:checked ~ .slide-mobile-menu
      max-height 220px
      opacity 1
      border-width 10px !important

  label
      cursor pointer
      transition(all .3s ease)

  .menu-banner
    background-color $color_text
    text-align center

// ------------------------------
// Page Styles
// ------------------------------

// Top Banner
.top-banner
  background-color $color_bg_intro

  img
    margin 12em 0 0 0
    max-width 100%

    @media screen and (min-width: 1180px)
      margin 7.5em 0 0 0

    @media screen and (max-width: 800px)
      margin 1em auto 0 auto
      max-width 80%

  .title
    margin 1.7em 0 0.85em 0
    font-family 'House Slant', script
    font-weight normal
    font-size 6.5em
    line-height 1em

    .highlight
      color $color_links

    @media screen and (max-width: 800px)
      margin 0 0 1em 0
      padding 0 0.4em
      font-size 3em

  @media screen and (max-width: 800px)
    text-align center

// Introduction
.introduction
  margin 0 0 3.5rem 0

  @media screen and (max-width: 640px)
    padding 0 1rem

  .intro-line
    margin-bottom 1em
    color $color_text
    font-weight 800

// Hire me!
.hire-me
  @media screen and (max-width: 640px)
    padding 0 1rem


// Case Study
.case-study

  img
    max-width 100%

  @media screen and (max-width: 640px)
    padding 0 1rem

// My Best Works
.graphic-projects

  .project-widget
    margin-bottom 1.2em

    .description-third
      margin-bottom 2.5em

    .project-title
      margin 1.2em 0 0 0

      font-size 1.5em
      font-weight 800

    .img-container
      margin 0 0 0.7em 0

      img
        display block
        max-width 100%
        margin 0 auto

    .skills
      margin 1.3em 0 0 0
      padding-top 1em

      border-top 1px solid $color_grey_extra_light

      font-family 'Open Sans'
      font-size 0.688em
      font-weight 600
      line-height 1.6em
      text-transform uppercase
      letter-spacing 1px

      .skills-label
        color $color_grey

        &::after
          content '\2009'

      .skills-tags
        display inline

        li
          &::after
            content ',\2009'

          &:last-of-type::after
            content ''

      .extra
        color $color_links

  @media screen and (max-width: 640px)
    padding 0 1rem

    .section-subtitle .underlined
      border-bottom none

// Curriculum
.curriculum

  .work-experiences
  .studies
    margin-bottom 5em

    @media screen and (max-width: 640px)
      margin-bottom 2em

  .cv-subtitle
    margin 0.5em 0 1em 0

    font-size 1.4em
    font-weight 900
    text-align center

  .cv-unit
    border-top 3px solid $color_bg_intro

    .subtitle-strong
    .subtitle-light
      margin 0

    .cv-role
    .cv-info
      font-size 0.688em

    .cv-role
      margin-bottom 0.5em

      @media screen and (max-width: 640px)
        margin 1.2em 0 0 0

    .cv-info
      color lighten($color_text, 45%)


    .cv-content
      .subtitle-strong
        margin 0
        font-size 0.688em

      @media screen and (max-width: 640px)
        margin-top 1.2em

  @media screen and (max-width: 640px)
    padding 0 1rem

// Footer
footer
  background-color $color_bg_intro

  img
    max-width 25%

    @media screen and (max-width: 640px)
      max-width 45%

  .contacts
    .subtitle-light
      padding 0 0.5em
      font-size 0.85em

      &:after
        content '\2003●'
        color $color_text

      &:last-of-type:after
        content ''

      a
        border-bottom none

      @media screen and (max-width: 640px)
        &:after
          content '\2003•'

    @media screen and (max-width: 640px)
      font-size 0.75em

  .licence
    font-size 0.688em
    line-height 1.5em

    @media screen and (max-width: 640px)
      margin-bottom 2em
      padding 0 2em
