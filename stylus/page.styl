// Job Application for Bandcamp
// Valentina Montagna
// Berlin 2015


// Fonts
@import url("//fonts.googleapis.com/css?family=Open\+Sans:400,300,600,700,800")
@import url("//fonts.googleapis.com/css?family=Merriweather:400,300italic,300,400italic,700,700italic,900,900italic")
@import url("//fonts.googleapis.com/css?family=Inconsolata:400,700")

@font-face {
    font-family: "House Slant";
    src: url('HouseSlant.eot');
    src: url("HouseSlant.eot?#iefix") format("embedded-opentype"),
         url("HouseSlant.woff") format("woff");
    font-style: normal;
    font-weight: 400;
    font-stretch: normal;
}

// ------------------------------
// Colors
// ------------------------------

$color_bg_intro = #F8F6F3
$color_bg_playlist = #303030

$color_shadow_menu = #494744

$color_text = #444444
$color_text_lighter = lighten($color_text, 16%)
$color_links = #E96985
$color_links_hover = #2193B4

$color_grey = lighten($color_text, 45%)
$color_grey_light = lighten($color_text, 65%)
$color_grey_extra_light = lighten($color_text, 85%)

$color_menu_buttons = lighten($color_text, 30%)

// Mixins
transition()
  -webkit-transition arguments
  transition arguments

// Rounded Corners
$rounded_corners = 4px
$rounded_corners_small = 3px

// ------------------------------
// General Styles
// ------------------------------

body
    color $color_text

    font-family 'Merriweather', Georgia, serif
    text-rendering optimizeLegibility
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

    a
      font-weight 700
      text-decoration none

      color $color_links
      border-bottom 1px solid @color

      transition(all 0.3s ease)

      &:hover
        color $color_links_hover
        border-bottom 1px solid @color

    strong
      font-weight 700

// ------------------------------
// Buttons
// ------------------------------

// Menu Buttons
.menu-button
  font-family 'Open Sans'
  font-size 0.75em
  font-weight 700
  text-transform uppercase
  letter-spacing 1px

  border-bottom none
  border-radius $rounded_corners

  padding 0.5em 0.8em

  color $color_grey

  transition(all 0.4s ease)

  &:hover
    border-bottom none

    color $color_bg_intro
    background-color $color_text_lighter

  &:active
    box-shadow inset 0px 0px 3px 2px rgba($color_text, 0.2)

.contacts
  color $color_links

  &:hover
    color white
    background-color $color_links

// Button links
.button
  display inline-block

  padding 1em 1.2em

  border-radius $rounded_corners
  border-bottom none

  color white
  background-color $color_links

  font-family 'Open Sans', sans-serif
  font-size 0.75em
  font-weight 700
  text-align center
  text-transform uppercase
  letter-spacing 1px
  line-height 16px

  box-shadow 0px 2px 3px -3px rgba($color_text, 0)

  transition(all 0.3s ease)

  &:hover
    box-shadow 0px 3px 3px -3px rgba($color_text, 0.8)
    border-bottom none

    color white
    background-color $color_links_hover

  &:active
    box-shadow inset 0px 1px 3px 0px darken($color_links_hover, 40%)

  @media screen and (max-width: 640px)
    display block

// Smaller button
.btn-small
  @extend .button
  padding 0.6em 1em
  border-radius $rounded_corners_small
  font-size 0.7em

// Block button
.btn-block
  @extend .button
  display block

// Color and style variants
.btn-outline
  @extend .button
  background-color white
  color $color_text
  border 1px solid @color_text

  &:hover
    color white
    background-color $color_links
    border 1px solid $color_links

  &:active
    box-shadow inset 0px 1px 3px 0px darken($color_links, 30%)

.btn-light
  @extend .button
  background-color $color_bg_intro
  color lighten($color_text, 25%)
  border 1px solid darken($color_bg_intro, 5%)

  &:hover
    color white
    background-color $color_links
    border 1px solid @background-color

  &:active
    box-shadow inset 0px 1px 3px 0px darken($color_links, 30%)

.btn-dark
  @extend .button
  background-color $color_text
  color $color_grey_extra_light

  &:hover
    color white
    background-color $color_links

  &:active
    box-shadow inset 0px 1px 3px 0px darken($color_links, 30%)

// Non-text links
.non-text-link
  border-bottom none

  &:hover
    border-bottom none

// ------------------------------
// Typography Skins
// ------------------------------

// Section title
.section-title
  margin 1.8em 0 0 0

  font-size 2.6em
  font-weight 900
  text-align center

// Section subtitle
.section-subtitle
  margin 1.6em 0 2em 0

  font-family 'Open Sans', sans-serif
  font-size 0.9em
  font-weight 600
  text-transform uppercase
  letter-spacing 1px

.underlined
  @extend .section-subtitle
  margin 1.6em 0 0 0
  padding-bottom 3em
  border-bottom 1px solid $color_grey_extra_light

// Descriptions
.description
  color $color_text_lighter

// Description 2 columns
.description-half
  @extend .description
  margin 1em 0 0 0

  font-size 1em
  line-height 1.688em

// Description 3 columns
.description-third
  @extend .description
  margin 1.2em 0

  font-size 0.9em
  line-height 1.8em

// Subtitles
.subtitle-strong
  margin 1.2em 0 0.85em 0

  font-family 'Open Sans', sans-serif
  font-size 0.8em
  font-weight 700
  text-transform uppercase
  letter-spacing 1px

.subtitle-light
  @extend .subtitle-strong
  font-weight 600

// ------------------------------
// Page Styles
// ------------------------------

// Menu
.menu-page
  position relative

  .menu-container
    padding 0.85em 0
    position fixed
    z-index 100

    background-color $color_text
    box-shadow 0px 1px 1px 0px rgba($color_shadow_menu, 0.4)

// Top Banner
.top-banner
  background-color $color_bg_intro

  .title
    margin 1.5em 0 0.85em 0
    font-family 'House Slant', script
    font-weight normal
    font-size 6.5em
    line-height 1em

    .highlight
      color $color_links

// Introduction
.introduction
  margin 0 0 3.5rem 0

  .intro-line
    margin-bottom 1em
    color $color_text

    font-weight 800

// Case Study
.case-study

  img
    max-width 100%

// My Best Works
.graphic-projects

  .project-widget
    margin-bottom 1.2em

    .description-third
      margin-bottom 2.5em

    .project-title
      margin 1.2em 0 0 0

      font-size 1.5em
      font-weight 800

    .img-container
      margin 0 0 0.7em 0

      img
        margin 0 auto
        display block
        max-width 100%

    .skills
      border-top 1px solid $color_grey_extra_light
      padding-top 1em
      margin 1.3em 0 0 0

      font-family 'Open Sans'
      font-weight 600
      letter-spacing 1px
      text-transform uppercase
      font-size 0.7em
      line-height 1.6em

      .skills-label
        color $color_grey

        &::after
          content '\2009'

      .skills-tags
        display inline

        li
          &::after
            content ',\2009'

          &:last-of-type::after
            content ''

      .extra
        color $color_links

// Curriculum
.curriculum

  .subtitle-strong
    text-align center

    border-bottom 1px solid $color_grey_extra_light
    padding-bottom 1.2em

  .experience-info
    font-size 0.85em

  .subtitle-light
    margin 0

// Playlist
.playlist
  background-color $color_bg_playlist

  .section-title
    color white

  .iframe-container
    position relative
    height 0
    overflow hidden
    padding-bottom 37%
    padding-top 316px

    iframe
      position absolute
      top 0
      left 0
      width 100% !important
      height 100% !important
